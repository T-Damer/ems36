---
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'О нас',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="О нас"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Изображение рабочего процесса',
    }}
  >
    <Fragment slot="title">
      Компания «ЭлеваторМельСервис» <br />
      <span class="text-accent dark:text-white highlight">производство транспортного технологического оборудования</span
      >
    </Fragment>
  </Hero>

  <Stats
    title="Статистика"
    stats={[
      { title: 'Офисов', amount: '1' },
      { title: 'Сотрудников', amount: '70' },
      { title: 'Выполненных заказов', amount: '300+' },
    ]}
  />
</Layout>
