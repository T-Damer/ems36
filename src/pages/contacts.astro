---
import Layout from '~/layouts/PageLayout.astro';
import Features2 from '~/components/widgets/Features2.astro';
import YaMaps from '~/components/widgets/YaMaps.astro';
import Hero from '~/components/widgets/Hero.astro';
import { defaultOrgAddress } from '~/utils/openMaps';

const metadata = {
  title: 'Контакты',
};
---

<Layout metadata={metadata}>
  <Features2
    title="Свяжитесь с нами!"
    items={[
      {
        title: 'Телефон',
        description: '+7 (900) 300-63-23',
        callToAction: { href: 'tel:+79003006323', text: 'Позвонить' },
        icon: 'tabler:headset',
      },
      {
        title: 'Почта',
        description: 'elevatormelservis36@yandex.ru',
        callToAction: { href: 'mailto:elevatormelservis36@yandex.ru', text: 'Написать' },
        icon: 'tabler:mail',
      },
      {
        title: 'Местоположение',
        description: defaultOrgAddress,
        callToAction: { onclick: 'openMaps()', text: 'Открыть на картах' },
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <Hero tagline="Карты">
    <Fragment slot="content">
      <YaMaps />
    </Fragment>
  </Hero>
</Layout>

<script>
  import openMaps from '~/utils/openMaps';

  declare const window: any;
  window.openMaps = openMaps;
</script>
