---
import FileList from '~/components/widgets/FileList.astro';
import Hero from '~/components/widgets/Hero.astro';
import Layout from '~/layouts/PageLayout.astro';
import getFilesFromDir from '~/utils/getFilesFromDir';

const metadata = {
  title: 'Образцы паспортов',
};

const passports = await getFilesFromDir('files/passports');
---

<Layout metadata={metadata}>
  <Hero tagline={metadata.title}>
    <Fragment slot="content">
      <FileList fileList={passports} />
    </Fragment>
  </Hero>
</Layout>
